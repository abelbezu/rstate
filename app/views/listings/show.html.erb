<div class="container mt-3">
  <% if @listing %> 
    <div class="row">
      <div class="col-md-8 rs-listing-container-main mb-3">
        <% if @listing.image_proxies %>
          <%= render(partial: "house_picture_carousel", locals: {images: @listing.image_proxies})%>
        <% end %>
        <!-- Title and underline. -->
        <div class="row mt-3">
          <div class="col-md-12">
            <h4><%= @listing.title%></h4>
            <hr>
          </div>
        </div>
        <!-- House details -->
       
          <div class="row mt-2">
            <% if @listing.location %>
              <div class="rs-listing-info col-md-6">
                <ul>
                  <% if @listing.location.city %>
                    <li> City: <%= @listing.location.city %> </li>
                  <% end %>
                  <% if @listing.location.neighborhood %>
                    <li> Around <%= @listing.location.neighborhood %> </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <% if @listing.house_detail %>
              <div class="rs-listing-info col-md-6">
                <ul>
                  <% if (@listing.house_detail.bedrooms) %>
                    <li>
                      
                      <%= @listing.house_detail.bedrooms %> Bedrooms
                    </li>
                  <% end %>
                  <% if (@listing.house_detail.bedrooms) %>
                    <li>
                      
                      <%= @listing.house_detail.bathrooms %> Bathrooms
                    </li>
                  <% end %>
                  <% if (@listing.house_detail.floors && @listing.house_detail.floors > 1) %>
                    <li>
                      
                      G+<%= @listing.house_detail.floors %>
                    </li>
                  <% end %>
                  <% if (@listing.house_detail.area) %>
                    <li>
                      <%= @listing.house_detail.area %> Sqare Meters
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <div class="row mt-3">
          <div class="rs-listing-info col-md-12">
            <h4>Further Details</h4>
            <hr>
            <p><%= @listing.description %></p>
          </div>
        </div>
        
      </div>
      <div class="col-md-4">
       <%= render(partial: "show_side_pane", locals: {listing: @listing} )%>
       <br>
       Similar Listings:
       <br>
       <br>
       <%= render(partial: "show_similar_listings_side_pane", locals: {listings: @listings} )%>
      </div>
    </div> 
  <% else %>
    <%= render("partials/not_found", locals: {resource: "listing"})%>
  <% end %>
</div>