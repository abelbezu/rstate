<% if images.count > 0 %>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <% if images.count > 1 %>
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
        <% (images.count - 1).times do |i| %>          
            <li data-target="#carouselExampleIndicators" data-slide-to=<%=i %>></li>         
        <% end %>
    </ol>
  <% end %>
  <div class="carousel-inner">
    <% if images.first %>
          <div class="carousel-item active">
            <img class="d-block w-100" src=<%= images.first.image.url %> alt="First slide">
          </div>   
    <% end %>
    <% images[1..-1].each do |current_image| %> 
      <% if current_image.image && current_image.image.url %>
          <div class="carousel-item">
            <img class="d-block w-100" src=<%= current_image.image.url %> alt="First slide">
          </div>  
      <% end %>
    <% end %>
  </div>
  <% if images.count > 1 %>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  <% end %>
</div>
<% end %>