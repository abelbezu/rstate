<div class="container">
  <div class="row mt-3">
    <div class="col-md-9 rs-listing-container-main">
      <h5>Interest indication for: </h5>
      <%= render(partial: "search_result_card", locals: {listing: @listing, shows_listing_actions: false})%>
      <hr>

      
    <%= form_tag("/interest_indications", method: "post") do %>
       <input type="hidden" name="listing_id" value="<%= @listing.id %>">
        <div class="form-group">
          <label for="guestName">Name: </label>
          <input type="text" name="guest_name" class="form-control" id="guestName" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="guestEmail">Email: </label>
          <input type="email" name="guest_email" class="form-control" id="guestEmail" placeholder="Enter Email">
        </div>
        <div class="form-group">
          <label for="guestPhoneNumber">Phone Number: </label>
          <input type="text" name="guest_phone_number" class="form-control" id="guestPhoneNumber" placeholder="phone number">
        </div>
        <div class="form-group">
          <label for="exampleCheck1">Message to Agent: </label>
          <textarea class="form-control" name="message" id="exampleCheck1"> </textarea>
          
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
    <% end %>
    </div>
     <div class="col-md-3">

    </div>

  </div>
</div>

<%= render(partial: "partials/footer") %>